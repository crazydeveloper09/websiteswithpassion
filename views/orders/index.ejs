<% include ../partials/header %>
<br>
<br>
<br>
<br>
<div class="container">
    <div class="row">
       
        <div class="col-lg-12">
            <p id="subpageTitle" class="text-center">Nadesłane zamówienia stron</p>
            <% if(orders.length === 0){ %>
                <div class="alert alert-dark">
                    Nie mamy nowych zamówień
                </div>
            <% } else { %>
                <div class="row">
                    <% orders.forEach(order => { %>
                        <div class="col-lg-6 col-md-12">
                            <div class="card">
                                <div class="card-title text-center" id="name">
                                    <br>
                                    <%= order.websiteTitle %>
                                </div>
                                <div class="card-body">
                                    <p class="normal">Imię i nazwisko: <strong><%= order.name %></strong></p>
                                    <p class="normal">Email: <strong><%= order.email %></strong></p>
                                    <p class="normal">Status: <strong><%= order.status %></strong></p>
                                    <p class="normal">Typ: <strong><%= order.type %></strong></p>
                                    <p class="normal">Maksymalny budżet: <strong><%= order.budget %></strong></p>
                                    <% if(order.type === "update"){ %>
                                        <p class="normal">
                                            Poprzednia wersja: 
                                            <strong>
                                                <a href="<%= order.previousWebsite %>" target="_blank">
                                                    <%= order.previousWebsite %>
                                                </a>
                                            </strong>
                                        </p>
                                    <% } %>
                                  
                                    <p class="normal">
                                        Czego oczekuje
                                        <br>
                                        <strong><%= order.whatYouWish %></strong>
                                    </p>
                                    <p class="dateO">Wysłane <%= order.orderDate.toLocaleDateString() %></p>
                                    <a href="/website-orders/<%= order._id %>/edit" class="btn btn-primary button-small button-yellow">Edytuj</a>
                                    <a href="/website-orders/<%= order._id %>/delete" class="btn btn-primary button-small button-red"> Usuń</a>
                                    <a href="/website-orders/<%= order._id %>/send" class="btn btn-primary button-small button-orange">Wyślij ofertę</a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</div>
<% include ../partials/footer %>