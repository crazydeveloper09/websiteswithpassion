<% include ./partials/header %>
    <br><br><br><br>
    <div class="container">

        <div class="row">
            <div class="col-lg-12">

                <% if(typeof currentUser !=='undefined' ){ %>
                    <div class="text-center">

                        <a href="/announcements/new">Dodaj ogłoszenie</a>
                    </div>
                    <% } %>
            </div>
        </div>
        <% if(announcements !=0){ %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <% if(lang==="pl" ){ %>
                            <%= announcements[0].pl %>
                        <% } else { %>
                            <%= announcements[0].en %>
                        <% } %>
                        <% if(typeof currentUser !=='undefined' ){ %>
                            <div class="d-inline">

                                <a href="/announcements/<%= announcements[0]._id %>/edit"
                                    class="btn btn-secondary">Edytuj ogłoszenie</a>
                                <a href="/announcements/<%= announcements[0]._id %>/delete"
                                    class="btn btn-dark">Usuń ogłoszenie</a>
                            </div>
                        <% } %>
                                <button type="button" class="close" data-dismiss="alert"
                                    aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                    </div>
                </div>
            </div>
            <% } %>
               


    </div>

    <% if(error.length> 0){ %>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-12">
                    <div class="alert alert-danger text-center" role="alert">
                        <%= error %>
                    </div>
                </div>
            </div>
        </div>

        <% } %>
        <div class="container">
            <div class="row">
             
              <div class="col-lg-12 text-center" id="welcome">
                <h1 id="whoAmI">
                    <%= language.__("Witaj na moim portfolio") %>
                </h1>
                <p class="desc">
                    <%= language.__("Poznaj mnie bliżej!") %>
                </p>
                <p id="about_me" class="text-center">
                    <% if(lang==="pl" ){ %>
                        <p class="about color-navbar">
                            <%= user.about%>
                        </p>
                        <% } else { %>
                            <p class="about color-navbar">
                                <%= user.en %>
                            </p>
                            <% } %>
                </p>
                <% if(currentUser){ %>
                    <% if(currentUser.username==="Admin" ){%>
                        <br>
                        <div class="d-inline">
                            <a href="/about/<%= user._id %>/edit"
                                class="btn btn-outline-success">Edytuj</a>
                            <a href="/about/<%= user._id %>/achievements/add"
                                class="btn btn-outline-info">Dodaj
                                osiągnięcie</a>
                        </div>
                    <% } %>


                <% } %>
                <p class="desc">
                    <%= language.__("Zobacz moje osiągnięcia!") %>
                </p>
                <div class="row" id="achievements">
                    <% if(user.achievements.length==0){ %>
                        <div class="alert alert-info" role="alert">
                            <%= language.__("Nie mam żadnych osiągnięć") %>
                        </div>
                        <% } else { %>
                            <div class="row">
                                <% user.achievements.forEach((achievement)=> { %>
                                    <div class="col-lg-4 col-md-12">
                                        <h1 class="text-center do">
                                            <% if(lang==="pl" ){ %>
                                                <%= achievement.title %>
                                            <% } else { %>
                                                <%= achievement.titleEn %>
                                            <% } %>

                                        </h1>
                                        <div class="text-center">
                                            <img src="<%= achievement.picture %>" alt="Certificate" class="img-thumbnail" style="border: 0;" crossorigin>
                                        </div>
                                        <br>

                                        <% if(currentUser){ %>
                                            <a href="/about/<%= user._id %>/achievements/<%= achievement._id %>/edit"
                                                class="btn btn-secondary">
                                                Edytuj
                                            </a>
                                            <a href="/about/<%= user._id %>/achievements/<%= achievement._id %>/edit/picture"
                                                class="btn btn-dark">
                                                Edytuj zdjęcie główne
                                            </a>
                                            <a href="/about/<%= user._id %>/achievements/<%= achievement._id %>/delete"
                                                class="btn btn-danger">
                                                Usuń
                                            </a>
                                            <% } %>
                                    </div>
                                    <% }) %>
                            </div>
                            <% } %>
                                
                </div>
                <div class="desc"> <%= language.__("Zobacz, czym się zajmuję") %></div>
                <div class="row">
                    
                    <div class="col-lg-6 col-md-12 justify-content-center">
                       <p class="main text-center">NEW</p>
                       <p class="text-center do"><%= language.__("Robię od podstaw strony internetowe") %></p>                                 
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <p class="main text-center"><i class="fa-solid fa-arrow-up"></i></p>
                        <p class="text-center do"><%= language.__("Aktualizuję strony internetowe") %></p> 
                        
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <p class="main text-center">FRONTEND</p>
                        <p class="text-center do"><%= language.__("Potrafię zająć się wyglądem") %></p> 
                        
                    </div>
                    <div class="col-lg-6 col-md-12">
                        <p class="main text-center">BACKEND</p>
                        <p class="text-center do"><%= language.__("Albo serwerowymi rzeczami") %></p> 
                        
                    </div>
                </div>
                 <div class="desc text-center"> <%= language.__("Poznaj, które technologie wykorzystuję") %></div>
                 <div class="row justify-content-center">
                     <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fas fa-database fa-lg"></i></p>
                        <p class="normal text-center">MongoDB</p>
                     </div>
                     <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fab fa-node fa-lg"></i></p>
                        <p class="normal text-center">Node.js</p>
                     </div>
                     <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fab fa-npm fa-lg"></i></p>
                        <p class="normal text-center"><%= language.__("Różne moduły npm") %></p>
                     </div>
                     <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fab fa-html5 fa-lg"></i></p>
                        <p class="normal text-center">HTML</p>
                     </div>
                </div>
                <div class="row justify-content-center">
                    <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fab fa-css3-alt fa-lg"></i></p>
                        <p class="normal text-center">CSS</p>
                     </div>
                     <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fab fa-js fa-lg"></i></p>
                        <p class="normal text-center">Javascript</p>
                     </div>
                     <div class="col-lg-2 col-md-4 col-sm-6">
                        <p class="technologies text-center"><i class="fab fa-bootstrap fa-lg"></i></p>
                        <p class="normal text-center">Bootstrap</p>
                     </div>
                </div>
                     
                    
                 
            </div>
                
                
              </div>
              
          </div>
         
          <div class="container-full" >
              <div class="row">
                  <div class="col-lg-12">
                        <div class="desc text-center"> <%= language.__("Co teraz?") %></div>
                        <div class="text-center">
                        <a href="/projects" class="btn btn-primary button-small button-yellow">
                            <%= language.__("Zobacz projekty") %>
                        </a>
                        <a href="https://mkdportfolio.herokuapp.com/website-orders/new" class="btn btn-primary button-small button-orange">
                            <%= language.__("Zamów stronę") %>
                        </a>
                        </div>
                    
                    <div class="desc text-center" id="contactDiv">
                        <br> 
                        <%= language.__("Skontaktuj się ze mną") %>
                        <div id="contact" class="text-center" style="font-size: 18px;"></div>
                        <div class="container">
                            <div class="row">
                                <div class="col-lg-12">
                                    
                                    
                                    <p class="language text-center">
                                        
                                        <br>
                                        Maciej Kuta <script>document.write(new Date().getFullYear())</script> &copy; Wszelkie prawa zastrzeżone
                                    </p>
                                  
                                    <p class="language text-center">
                                        <% if(return_route){ %>
                                            <a href="/login?return_route=<%= return_route %>" style="color: #F2AC57;font-size: 13px; ">panel administracyjny</a>
                                        <% } else { %> 
                                            <a href="/login?return_route=<%= route %>" style="color: #F2AC57;font-size: 13px; ">panel administracyjny</a>
                                        <% } %>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <br>
                    </div>
                        
                    </div>
                  </div>
              </div>
          </div>
            
            
    
	
