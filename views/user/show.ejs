<% include ../partials/header %>
<br>
<br>
<br>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-title text-center" id="name">
					<br>
					<%= language.__("O mnie") %></div>
                <div class="card-body">
									<% if(lang==="pl"){ %>
									 <p class="about"><%= user.about%></p>
									<% } else { %>
										 <p class="about"><%= user.en %></p> 
									<% } %>
									
                   
                    <p class="text-center" id="name"><%= language.__("Osiągnięcia") %></p>
                    <% if(user.achievements.length==0){ %>
                        <div class="alert alert-info" role="alert">
                           <%= language.__("Nie mam żadnych osiągnięć") %> 
                        </div>
                    <% } else { %>
                        <div class="row">
                            <% user.achievements.forEach((achievement) => { %>
                                <div class="col-lg-4 col-md-12">
                                    <h1 class="text-center do">
                                        <% if(lang==="pl"){ %>
                                            <%= achievement.title %>
                                       <% } else { %>
                                            <%= achievement.titleEn %>
                                       <% } %>
                                        
                                    </h1>
									<div class="text-center">
										<img src="<%= achievement.picture %>" alt="Certificate" class="img-thumbnail">
									</div>
                                    <br>
                                    
                                   <% if(currentUser){ %>
                                    <a href="/about/<%= user._id %>/achievements/<%= achievement._id %>/edit" class="btn btn-secondary">
                                        Edytuj
                                    </a>
                                    <a href="/about/<%= user._id %>/achievements/<%= achievement._id %>/edit/picture" class="btn btn-dark">
                                        Edytuj zdjęcie główne
                                    </a>
                                    <a href="/about/<%= user._id %>/achievements/<%= achievement._id %>/delete" class="btn btn-danger">
                                        Usuń
                                    </a>
                                   <% } %>
                                </div>
                            <% }) %> 
                        </div>
                    <% } %>
					<br>
                    <p class="text-center" id="name"><%= language.__("Kontakt") %></p>
                    <p class="about text-center">
                        Facebook: <a href="<%= user.fbLink %>" style="color:#77a6f2"><%= user.fbDesc %></a>

                    </p>
                    <p class="about text-center">
                        Instagram: <a href="<%= user.igLink %>" style="color:#77a6f2"><%= user.igDesc %></a>
                        
                    </p>
                    <p class="about text-center">
                        Email: <a href="mailto:<%= user.email %>" style="color:#77a6f2"><%= user.email %></a>
                        
                    </p>
                    <% if(currentUser){ %>
                        <% if(currentUser.username === "Admin"){ %>
                            <br>
							<div class="d-inline">
                             	<a href="/about/<%= user._id %>/edit" class="btn btn-outline-success">Edytuj</a>
                                <a href="/about/<%= user._id %>/achievements/add" class="btn btn-outline-info">Dodaj osiągnięcie</a>
                        	</div>
						<% } %>
                       
                         
                     <% } %>
					
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>
<% include ../partials/footer %>