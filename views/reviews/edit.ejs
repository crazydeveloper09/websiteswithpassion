<% include ../partials/header %>
  <br>
  <br>
  <br>
<br>
  <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-title text-center" id="name">
                    <br>
                    <%= language.__('Edytuj opinię o projekcie') %> <%= project.title %> <% if(lang == "en"){ %>
                        project
                    <% } %>
                </div>
                <div class="card-body">
                    <form action="/projects/<%= project._id %>/reviews/<%= review._id %>?_method=PUT" method="post">
                        <p class="normalf"><%= language.__('Edytuj ocenę') %></p>
                        <div id="ratingDiv">
                            <% for(let i=1;i<=5;i++){ %>
                                <% if(i <= review.stars){ %>
                                    <div class="star d-inline" id="<%= i %>" style="color: goldenrod;"><i class="fas fa-star"></i></div>
                                <% } else { %>
                                    <div class="star d-inline" id="<%= i %>"><i class="fas fa-star"></i></div>
                                <% } %>
                            <% } %>
                        </div>
                       
                       
                        <br>
                        <input type="text" id="stars" value="<%= review.stars %>" name="review[stars]" hidden>
                        <p class="normalf"><%= language.__('Edytuj opinię') %></p>
                        <textarea name="review[text]" class="form-control" placeholder="<%= language.__('Wpisz opinię') %>" style=" background: none;
                        color: #01597c;
                        border-bottom: 1px solid #01597c;
                        border-top: none;
                        border-right: none;
                        border-left: none;"><%= review.text %></textarea>
                        <br>
                        <input type="submit" value="<%= language.__('Edytuj opinię') %>" class="btn btn-outline-primary">
                    </form>
                </div>
            </div>
        </div>
      </div>
  </div>
  <script>
      $(".star").on('click', function(){
        
        document.getElementById("stars").value = this.id;
        for(let i=0; i<= this.id;i++){
           document.getElementById(this.id-i).style.color = "goldenrod";
        }
        
      });
  </script>
<% include ../partials/footer %>