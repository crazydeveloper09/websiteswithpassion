<% include ../partials/headera %>
<div class="col-lg-6 col-md-12" id="form">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-12" style="margin-top: 20%">
			<div id="form1">
				<a href="/about">
					<i class="fas fa-arrow-left"></i>
					Wróć do strony O mnie
				</a>
				<h1 class="login">Edytuj zdjęcie główne osiągnięcia <%= achievement.title %></h1>
				<% if(error.length > 0){ %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
				<% } %>
                     <form action="/about/<%= currentUser._id %>/achievements/<%= achievement._id %>/edit/picture" method="post" enctype="multipart/form-data">
                        
                        <p class="username">
                            Wybierz zdjęcie
                         </p>
                        <input type="file" name="picture" style="color:#c9c7c7">
                        <br>
                        <br>
                        <input type="submit" value="Edytuj zdjęcie główne do osiągnięcia" class="btn btn-primary button">
                    </form>
                </div>
            </div>
           
        </div>
    </div>
</div>
<%- include("../partials/footera") %>