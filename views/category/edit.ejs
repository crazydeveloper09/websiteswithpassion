<% include ../partials/headera %>
<div class="col-lg-6 col-md-12" id="form">
	<div class="row justify-content-center">
		<div class="col-lg-8 col-md-12" style="margin-top: 17%">
			<div id="form1">
				<a href="/projects/category/<%= category.link%>">
					<i class="fas fa-arrow-left"></i>
					Wróć do strony głównej
				</a>
				<h1 class="login">Edytuj kategorię <%= category.title %></h1>
				<% if(error.length > 0){ %>
					<div class="alert alert-danger" role="alert">
						<%= error %>
					</div>
				<% } %>
                <form action="/projects/category/<%= category._id %>?_method=PUT" method="post">
                        
                    <div class="form-floating mb-3">
                   
                        <input type="text" id="title" name="category[title]" value="<%= category.title %>" class="form-control" placeholder="Tytuł po polsku">
                        <label for="title" class="username">
                            Edytuj polską nazwę
                            
                        </label>
                        
                    </div>
                   
                    
                    <div class="form-floating mb-3">
                   
                        <input type="text" id="titleEn" name="category[titleEn]" value="<%= category.titleEn %>" class="form-control" placeholder="Tytuł po angielsku">
                        <label for="titleEn" class="username">
                            Edytuj angielską nazwę
                            
                        </label>
                        
                    </div>
                  
                        <div class="form-floating mb-3">
                   
                            <input type="color" id="color" name="category[color]" value="<%= category.color %>" class="form-control" placeholder="Kolor kategorii">
                            <label for="color" class="username">
                               Edytuj kolor kategorii
                                
                            </label>
                            
                        </div>
                        
                    <input type="submit" value="Edytuj kategorię" class="btn btn-primary button">
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>